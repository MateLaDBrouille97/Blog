{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"],
      "@lib/*": ["lib/*"],
      "/opt/client": ["lib/prismadb"],
      "@/*": ["./chapters/[ChapterId]/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
 "pages/BlogArticles/[BlogArticleId]/layout.tsx",
  "pages/BlogArticles/[BlogArticleId]/page.tsx", 
  "pages/BlogArticles/_components/blog-mobile-sidebar.jsx",
   "pages/BlogArticles/_components/blogarticle-sidebar.tsx",
    "pages/ChaptersBA/index.js",
     "pages/api/getChapter.js",
      "pages/BlogArticles/[BlogArticleId]/_components/blog-sidebar-item.jsx",
       "pages/BlogArticles/[BlogArticleId]/_components/blogarticle-sidebar.jsx",
       "pages/BlogArticles/[BlogArticleId]/_components/blogarticle-navbar.jsx",
        "pages/BlogArticles/[BlogArticleId]/chapters/_components/video-player.jsx",
         "pages/BlogArticles/[BlogArticleId]/chapters/_components/blog-progress-button.jsx",
         "./src",
         "./lib", "pages/ChaptersBA/_components/blog-enroll-button.jsx" ],
  "exclude": [
    "node_modules"
  ],
 
}
